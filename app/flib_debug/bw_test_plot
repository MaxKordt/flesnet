set terminal pdf
set output 'bw.pdf'

set logscale x
set xlabel 'max. mc size [Byte]'
set ylabel 'bandwidth [MB/s]'
set ytics 250
set grid ytics
set yrange [0:4000]

plot 'bw.dat' index 1 using 3:5 with lp title '1 link', \
 'bw.dat' index 2 using 3:5 with lp title '2 link', \
 'bw.dat' index 3 using 3:5 with lp title '3 link', \
 'bw.dat' index 4 using 3:5 with lp title '4 link'
